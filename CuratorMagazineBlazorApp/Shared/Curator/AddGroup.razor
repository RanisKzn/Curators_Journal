@using CuratorMagazineBlazorApp.Shared.ModalWindows
@using CuratorMagazineBlazorApp.Shared.StatsCollect
@using CuratorMagazineWebAPI.Models.Entities.Domains


 <div class="container my-4 bg-secondary bg-opacity-50" style="min-height: 600px;"> 
    <div class="container-fluid" >
        <div class="row ">
            <div class="col-md-1 mt-3">
                @if(true)
                {
                    <img class="img-fluid rounded" src="../img/no-img.jpg" alt="">
                }
                
            </div>
            <div class="col-md-8 mt-3 text-white">
                <h5>@group.Name</h5>
                <p>Куратор</p>
                @*Пометка придумать как достать куратора*@
            </div>
            <div class="col-md-6 mt-3">
                <h5 class="text-white">Участники группы</h5>
                <div class="container-fluid bg-white rounded-3 scroll mb-3">
                    @foreach (var item in group.Users)
                    {
                        <IndividualStudent student="item"></IndividualStudent>
                        
                    }
                </div>
            </div>
                    
            <div class="col-md-6 mt-3">
                <h5 class="text-white">Список проведенных мероприятий</h5>
                <div class="container-fluid bg-white rounded-3 scroll mb-3">
                    <button class="row mt-3 mb-2 text-start border-0" data-bs-toggle="modal" data-bs-target="#eventsInfoModal" >
                        <div class="col-md-3">
                            @if (true)
                            {
                                <img class="img-fluid rounded" src="../img/no-img.jpg" alt="">
                            }
                        </div>
                        <div class="col-md-8">
                            <h5><a>Название</a></h5>  
                            @*Помтека добавить таблицу с мерроприятиями*@
                            <p>Дата проведения</p>
                        </div>
                    </button>
                    <hr class="m-0">
                </div>
            </div>
            <AddEventModalWindow></AddEventModalWindow>
            <AddStudentModalWindow></AddStudentModalWindow>
            <div class="col-md-6 text-center">
                <button class="btn btn-secondary me-3 " data-bs-toggle="modal" data-bs-target="#addStudentModal">Добавить</button>
                <button class="btn btn-secondary me-3">Экспорт</button>
                <button class="btn btn-secondary me-3">Импорт</button>
                <button class="btn btn-secondary me-3 disabled">Изменить</button>
                <button class="btn btn-secondary disabled">Удалить</button>
            </div>
            <div class="col-md-6 text-center">
                <button class="btn btn-secondary me-3" data-bs-toggle="modal" data-bs-target="#addEventModal">Добавить</button>
                <button class="btn btn-secondary me-3">Экспорт</button>
                <button class="btn btn-secondary me-3">Импорт</button>
                <button class="btn btn-secondary me-3 disabled">Изменить</button>
                <button class="btn btn-secondary disabled">Удалить</button>
            </div>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public Group group { get; set; }

    [Parameter]
    public User? CurrentUser { get; set; }
}
